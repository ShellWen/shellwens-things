---
import type { MarkdownHeading } from '@astrojs/markdown-remark'
import type { CollectionEntry } from 'astro:content'
import Content from './Content.astro'

type Props = CollectionEntry<'page'>['data'] & {
  slug: string
  headings: MarkdownHeading[]
  minutesRead: string
}

const { slug, title, description, pubDate, updatedDate, heroImage, heroImageAlt, headings, minutesRead } = Astro.props
---

<Content {slug} {title} {description} {pubDate} {updatedDate} {heroImage} {heroImageAlt} {headings} {minutesRead}>
  <slot />
</Content>
