---
import type { MarkdownHeading } from '@astrojs/markdown-remark'
import type { CollectionEntry } from 'astro:content'
import Content from './Content.astro'

type Props = CollectionEntry<'post'>['data'] & {
  slug: string
  headings: MarkdownHeading[]
  minutesRead: string
}

// TODO: Category
// eslint-disable-next-line @typescript-eslint/no-unused-vars
const { slug, title, description, pubDate, updatedDate, heroImage, category, heroImageAlt, headings, minutesRead } =
  Astro.props
---

<Content {slug} {title} {description} {pubDate} {updatedDate} {heroImage} {heroImageAlt} {headings} {minutesRead}>
  <slot />
</Content>
